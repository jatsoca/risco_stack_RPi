{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@vanackej/risco-lan-bridge/*": [
        "../risco-lan-bridge/dist/*"
      ],
      "@vanackej/risco-lan-bridge": [
        "../risco-lan-bridge/dist"
      ]
    },
    "lib": [
      "ES2021"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
